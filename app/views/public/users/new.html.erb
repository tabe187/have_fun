
<main>
  <div class="container">
    <div class="rowjustify-content-center text-center" style="padding: 10px">
       <h5>新規登録</h5>
    </div>

  <%= form_for(@user, url: users_path) do |f| %>
  <!--<#%= render "public/shared/error_messages", resource: resource %>-->

    <div class="row justify-content-center">
      <div class="col-xl-7 justify-content-center text-left" style="padding: 10px" >
        <table>
          <tbody>
            <tr>
                <div class="form-group">
                  <label>ユーザーネーム(8文字以内)</label><br>
                  <%= f.text_field :name, autofocus: true, autocomplete: "name",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>メールアドレス</label><br>
                  <%= f.email_field :mail, autofocus: true, autocomplete: "mail",  class: 'form-control', size: "20x7" %>
                </div>
                
                <div class="form-group">
                  <label>パスワード</label><br>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                    <% end %><br />
                    <%= f.text_field :password, autocomplete: "new-password" %>
                </div>
                <div class="form-group">
                  <label>パスワード確認</label><br>
                  <%= f.text_field :password_confirmation, autocomplete: "new-password" %>
                </div>
                <div class="actions">
                  <%= f.submit "登録する" %>
                  <% end %>
                </div>
              <!--<#%= render "public/shared/links" %>-->
          </tbody>
        </table>
      </div>
    </div>
 </div>
</main>